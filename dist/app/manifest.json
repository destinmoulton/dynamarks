{
    "manifest_version": 2,
    "name": "Dynamarks",
    "version": "0.1",
    "description": "Synchronize bookmarks from Dynalist.",
    "icons": {
        "48": "graphics/icons/dynamarks_48.svg",
        "96": "graphics/icons/dynamarks_96.svg"
    },

    "browser_action": {
        "browser_style": false,
        "default_popup": "index.html",
        "default_icon": {
            "16": "graphics/icons/dynamarks_16.svg",
            "32": "graphics/icons/dynamarks_32.svg"
        }
    },
    "content_security_policy": "object-src 'self'; script-src 'self' 'unsafe-eval';",
    "permissions": [
        "<all_urls>",
        "activeTab",
        "alarms",
        "bookmarks",
        "notifications",
        "tabs"
    ]
}
